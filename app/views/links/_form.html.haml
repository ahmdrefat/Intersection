= form_for @link do |f|
  -if @link.errors.any?
    #error_explanation
      %h2= "#{pluralize(@link.errors.count, "error")} prohibited this link from being saved:"
      %ul
        - @link.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :link
    = f.text_field :link
  .field
    = f.label :project_id
    = f.number_field :project_id
  .field
    = f.label :link_type_id
    = f.number_field :link_type_id
  .actions
    = f.submit 'Save'
