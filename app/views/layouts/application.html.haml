<!DOCTYPE html>
%html
  %head
    %title Intersection
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    - if flash[:notice]
      .div{:class => 'alert-message success fade in', 'data-alert' => 'alert'}
        %a.close{:href => '#'} x
        %p
          %strong
            = notice
    - if flash[:alert]
      .div{:class => 'alert-message info fade in', 'data-alert' => 'alert'}
        %a.close{:href => '#'} x
        %p
          %strong
            = alert
    #header.wrap
      %a.like-btn{:href => "/", :id =>"logo"} Code for America
      #tag-line
        %h1 Intersection
        %h2 Project Dashboard
      #nav-wrap
        %ul#nav.menu
          %li
            = link_to 'Home', root_path
          %li
            = link_to 'Teams', '#'
          %li
            = link_to 'Projects', '#'
          %li
            = link_to 'Fellows', profiles_path
          %li
            - if user_signed_in?
              = link_to('Logout', destroy_user_session_path, :method => :delete)
            - else
              = link_to('Login', new_user_session_path)
    .wrap-t
      .container
        = yield
    %footer
      Code for America
